{
  "version": 2,
  "builds": [
    { "src": "api/index.py", "use": "@vercel/python" },
    {
      "src": "ui/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "ui/dist" }
    }
  ],
  "outputDirectory": "ui/dist",
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.py" },
    { "src": "/(.*)", "dest": "ui/dist/$1" }
  ]
}
